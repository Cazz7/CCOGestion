<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <!-- Observaciones -->
    <TextView
        android:id="@+id/observaciones_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fecha_item"
        android:layout_marginTop="10dp"
        android:text="@string/fd_observaciones1"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <!-- SubEvento -->
    <TextView
        android:id="@+id/subEvento_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/fd_subEvento1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorPressedMini" />

    <!-- Fecha -->
    <TextView
        android:id="@+id/fecha_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView"
        android:text="@string/fd_fecha1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />

    <!-- Evento -->
    <TextView
        android:id="@+id/evento_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/subEvento_item"
        android:layout_alignParentTop="true"
        android:layout_marginRight="25dp"
        android:text="@string/fd_evento1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="italic"
        android:textColor="@color/accent"/>

    <!-- Icono para la fecha -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="3dp"
        android:src="@mipmap/ic_calendar" />

</RelativeLayout>